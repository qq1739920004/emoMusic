/* components/ranking-item/index.wxss */
.item{
  width: 100%;
  height: 200rpx;
  display: flex;
  border-radius: 5px;
  overflow: hidden;
  margin-bottom: 20rpx;
  background-color: rgba(245, 241, 241, 0.692);
  justify-content: space-between;
}
.content{
  width:calc(100% - 200rpx);
  box-sizing: border-box;
  padding: 15rpx;
}
.rankingTitle{
  font-weight: 600;
  display: block;
  font-size: 30rpx;
  
}
.musicListLi{
  width: 100%;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  word-break: break-all;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.musicName{
  font-size: 24rpx;
}
.musicAuthor{
  font-size: 24rpx;
  color: #969494;
}
.img{
  width: 200rpx;
}
.count{
  position: absolute;
  bottom: 0;
  right: 4rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  border-radius: 5px;
  padding: 2rpx 4rpx;
  background-color: rgba(0, 0, 0, 0.6);
}
.imgContent{
  position: relative;
}