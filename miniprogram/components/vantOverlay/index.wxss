/* components/vantOverlay/index.wxss */
.wrapper{
  width: 100%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.van-notify{
  position: relative;
  top: 200rpx;
}
.registerForm{
  box-shadow:0px 0px 30px rgba(0, 0, 0, 0.5) ;
  width: 90%;
  height: 80%;
  background-color: white;
  border-radius: 10px;
  box-sizing: border-box;
  padding: 50rpx 20rpx;
  position: relative;
}
.close{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10px;
  top: 10px;
}
.formBox{
  width: 100%;
  height: 100%;
}
.formTitle{
  display: flex;
  width: 100%;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 100rpx;
}
.van-field{
  border: 1px solid rgb(179, 170, 170) !important;
  border-radius: 3px !important;
  padding-left: 5px !important;
}
.van-field-active{
  border: 1px solid rgb(179, 170, 170) !important;
  border-radius: 3px !important;
  padding-left: 5px !important;
}
.verify{
  display: flex;
  justify-content:left;
  align-items: center;
}
.inputPhoen{
  height: 150rpx;
}
.hover-class{
  width: 30px !important;
}
.loginBut{
  width: 100%;
  display: flex;
  justify-content: center;  
  margin-top: 130rpx;
}
.loginChange{
  margin-top: 50rpx;
  display: block;
  width: 100%;
  text-align: center;
  color: rgb(34, 177, 243);
  font-size: 25rpx;
  text-decoration: underline;
}
.vLoading{
  position: absolute;
  top: 40%;
  z-index: 999;
  left: 50%;
  transform: translate(-50%);
}