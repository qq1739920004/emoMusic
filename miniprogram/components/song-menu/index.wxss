/* components/song-menu/index.wxss */
.item{
  width: 200rpx;
  height: 250rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.img{
  width: 100%;
  height: 200rpx;
  border-radius: 10px;
  display: block;
}
.font{
  vertical-align: top;
  word-wrap: break-word;
  display: -webkit-box;
  font-size: 26rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.itemMenu{
  white-space: nowrap;  
  width:calc(100vw - 10rpx);
}
.itemImg{
  position: relative;
}
.imgText{
  position: absolute;
  bottom: 0;
  right: 0rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  border-radius: 5px;
  padding: 2rpx 4rpx;
  background-color: rgba(0, 0, 0, 0.6);
}